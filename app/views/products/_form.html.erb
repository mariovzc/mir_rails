<div class="field">
  <%= f.label :name, "Nombre del producto", class: 'label'%>
  <div class="control">
    <%= f.text_field :name, required: true, class: 'input is-medium' %>      
  </div>
</div>
<div class="field">
  <%= f.label :price, "Precio del producto", class: 'label'%>
  <div class="control">
    <%= f.number_field :price, class: "input is-medium" , required: true%>      
  </div>
</div>
<div class="field">
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
        <%= b.label class:"label" do%>
          <%=b.check_box + b.text%>
        <%end%>
    <% end %>
</div>
