<div class="form-group">
  <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre del producto'%>
</div>
<div class="form-group">
  <%= f.number_field :price, class: 'form-control', placeholder: 'Precio del producto'%>
</div>
  <%= f.fields_for :product_categories do |ff| %>
    <div class="check">
      <%= ff.check_box :_destroy,
            {:checked => ff.object.persisted?},
            '0', '1'
      %>
      <%= ff.label :_destroy, ff.object.category.name %>
      <%= ff.hidden_field :category_id %>
    </div>
  <% end %>        
<button type="submit" class="btn btn-primary btn-lg btn-block">Create product</button>      